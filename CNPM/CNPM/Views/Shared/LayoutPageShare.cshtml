<body>
    <header>
        <a href="@Url.Action("Index","TrangChu")" style="text-decoration:none">
            <img src="~/images/header/icon.svg" alt="" srcset="">
            <span>QDN CENTER</span>
        </a>
        <nav>
            <ul class="main-menu-first">
                <li>
                    <a href="@Url.Action("Schedule","Schedule")">DANH MỤC</a>

                </li>
                <li><a href="@Url.Action("Index","Introduction")" active>GIỚI THIỆU</a></li>
