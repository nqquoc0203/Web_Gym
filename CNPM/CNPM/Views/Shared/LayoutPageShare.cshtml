                <li><a href="@Url.Action("Coach","Coach")">HỖ TRỢ KHÁCH HÀNG</a></li>

            </ul>
        </nav>
        <nav>
            <ul class="main-menu-second">
                <li>
                    @if (Session["LoggedInUserId"] == null)
                        {
                            <a href="@Url.Action("Login","LoginSignUp")"><img src="~/images/header/profile.svg" alt="" srcset=""></a>
                        }
                     else
                        {
                            <span>Xin chào @Session["NameUser"]</span>
                            <a href="@Url.Action("Logout", "LoginSignUp")">Đăng xuất</a><br />
                            <span>Số tiền của bạn @Session["SoTienCuaKH"]</span>
                            <a href="https://me.momo.vn/x3IbTQsGsPfRuzIyt7tXfz">Nạp tiền</a>
                        }
                </li>
            </ul>
        </nav>
